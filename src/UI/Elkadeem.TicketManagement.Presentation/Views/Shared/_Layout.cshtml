<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elkadeem Ticket Management</title>
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css" />

    <script src="https://kit.fontawesome.com/05c0aff4ff.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">

    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid">
        <header>
            <h1><img src="~/img/FirstRowTickets.png"></h1>
            <h3 class="title">Elkadeem Ticket Management</h3>
        </header>

        <div class="d-flex">
            <partial name="_NavMenu" />            

            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>